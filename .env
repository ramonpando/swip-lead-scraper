# Swip Lead Scraper Environment Variables

# General
ENVIRONMENT=production
LOG_LEVEL=INFO
API_SECRET_KEY=swip-scraper-secret-key-2024

# Database
REDIS_URL=redis://redis:6379/0

# Google Sheets Integration
GOOGLE_SHEETS_CREDENTIALS=path/to/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id

# Chatwoot Integration
CHATWOOT_API_URL=https://your-chatwoot-domain.com
CHATWOOT_API_TOKEN=your-chatwoot-token
CHATWOOT_ACCOUNT_ID=1

# N8N Integration
N8N_WEBHOOK_URL=https://your-n8n-domain.com/webhook
N8N_API_KEY=your-n8n-api-key

# WhatsApp (via Chatwoot)
WHATSAPP_PHONE_NUMBER=+521234567890

# Scraping Configuration
DEFAULT_MAX_LEADS=50
DEFAULT_SOURCES=google_maps,directories
SCRAPING_TIMEOUT=3600
RATE_LIMIT_DELAY=2

# Anti-detection
USE_PROXIES=false
PROXY_LIST=
ROTATING_USER_AGENTS=true
STEALTH_MODE=true

# File Storage
DOWNLOADS_PATH=/app/downloads
LOGS_PATH=/app/logs
CREDENTIALS_PATH=/app/credentials
